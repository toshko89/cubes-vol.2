<main>
    <h1>{{name}}</h1>
    <img class="cube" src="{{imageUrl}}">
    <div class="details">
        <p><span>Description:</span>{{description}}</p>
        <p><span>Difficulty level:</span>{{difficulty}}</p>
        {{#if user}}
        <a class="btn" href="/cube/{{_id}}/accessory/attach">Accessory</a>
        <a class="btn" href="/cube/{{_id}}/edit">Edit</a>
        <a class="btn" href="/cube/{{_id}}/delete">Delete</a>
        {{/if}}
        <a class="btn" href="/">Back</a>
    </div>
    <h2>Accessories</h2>
    <div class="accessories">
        {{#each accessories}}
        <div class="accessory">
            <img src="{{imageUrl}}" alt="stickerName">
            <h3>{{name}}</h3>
            <p>{{description}}</p>
        </div>
        {{else}}
        <h3 class="italic">This cube has no accessories yet...</h3>
        {{/each}}
    </div>
</main>